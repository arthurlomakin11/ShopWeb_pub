@if (!Submited)
{
    <h3>@FeedbackHeader</h3>


    <div class="form-group">
        <label for="Fio">ПІБ</label>
        <input class="form-control" id="Fio" placeholder="ПІБ">
    </div>
    <div class="form-group">
        <label for="Phone">Номер телефону</label>
        <input type="number" id="Phone" class="form-control" @bind-value="Phone" placeholder="Номер телефону">
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input id="Phone" class="form-control" @bind-value="Email" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="Message">Повідомлення</label>
        <textarea rows="@TextAreaRows" id="Message" class="form-control" @bind="Message" placeholder="Повідомлення" />
    </div>
    <button type="submit" class="btn btn-primary" @onclick="Submit">Відправити</button>
}
else
{
    <div style="display:flex; align-content:center; justify-content:center; font-size:30px;">Повідомлення прийнято!</div>
}