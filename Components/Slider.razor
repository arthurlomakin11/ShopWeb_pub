@inject ShopWebContext Context

<div id="carouselExampleControls" class="carousel slide inverted" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (MenuItem item in SliderElements)
        {
            <div class="carousel-item @(item.SequentialNumber == 1 ? "active" : "")">
                <div class="d-block w-100">
                    @((MarkupString) item.Content)
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>